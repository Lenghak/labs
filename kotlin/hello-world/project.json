{
  "name": "@kotlin/hello-world",
  "targets": {
    "add": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun add {args.dependency}",
        "cwd": "kotlin/hello-world"
      }
    },
    "remove": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun remove {args.dependency}",
        "cwd": "kotlin/hello-world"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ktlint --reporter=plain",
        "cwd": "kotlin/hello-world"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ktlint --format",
        "cwd": "kotlin/hello-world"
      }
    },
    "format-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ktlint --format --dry-run",
        "cwd": "kotlin/hello-world"
      }
    }
  }
}
